---
// SYSTEM CONFIG
const title = "Sabari Works";
const showreelId = "x7VlLZrcX7Y";
const resumeLink = "https://drive.google.com/uc?export=download&id=1URSblavJtMmgegujhhuK9LBd_IRoKGk7";

const categories = [
  { name: "Client Works", slug: "client-works", desc: "Commercial & Social", grid: "md:col-span-8" },
  { name: "VFX", slug: "vfx", desc: "Compositing & FX", grid: "md:col-span-4" },
  { name: "3D Modelling", slug: "3d-modelling", desc: "Environments & Props", grid: "md:col-span-4" },
  { name: "Motion", slug: "motion-graphics", desc: "Dynamic Animation", grid: "md:col-span-4" },
  { name: "Color", slug: "color-correction", desc: "Grading & LookDev", grid: "md:col-span-4" },
];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title} | Portfolio</title>
		<script src="https://cdn.tailwindcss.com"></script>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;900&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet">
		<style>
			:root { --blue: #2563eb; --black: #000000; }
			body { 
				background-color: var(--black); 
				color: white; 
				font-family: 'Inter', sans-serif;
				margin: 0;
				overflow-x: hidden;
			}
			.font-mono { font-family: 'Space Mono', monospace; }
			
			/* Scanline effect */
			body::before {
				content: " ";
				position: fixed;
				top: 0; left: 0; bottom: 0; right: 0;
				background: linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.25) 50%), linear-gradient(90deg, rgba(255, 0, 0, 0.06), rgba(0, 255, 0, 0.02), rgba(0, 0, 255, 0.06));
				z-index: 100;
				background-size: 100% 2px, 3px 100%;
				pointer-events: none;
			}

			.video-glow {
				box-shadow: 0 0 50px rgba(37, 99, 235, 0.2);
				border: 1px solid rgba(37, 99, 235, 0.3);
			}

			.neo-card {
				background: #050505;
				border: 1px solid #111;
				transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
			}
			.neo-card:hover {
				border-color: var(--blue);
				box-shadow: 0 0 40px rgba(37, 99, 235, 0.1);
				transform: translateY(-5px);
			}
		</style>
	</head>
	<body class="bg-[#000]">
		
		<nav class="fixed top-0 w-full z-50 p-6 flex justify-between items-center bg-gradient-to-b from-black to-transparent">
			<div class="flex items-center gap-2">
				<div class="w-2 h-2 bg-blue-600 rounded-full animate-pulse"></div>
				<span class="font-mono text-[10px] tracking-[0.4em] uppercase">Status: Online</span>
			</div>
			<div class="font-mono text-[10px] tracking-[0.4em] uppercase text-gray-500">Sabari_Works // v2.0</div>
		</nav>

		<section class="min-h-screen w-full flex flex-col items-center justify-center px-4 pt-20">
			<div class="text-center mb-10">
				<h1 class="text-6xl md:text-[9rem] font-900 italic uppercase tracking-tighter leading-none m-0">
					SABARI<span class="text-blue-600">.WORKS</span>
				</h1>
				<p class="font-mono text-[10px] text-blue-500 uppercase tracking-[0.8em] mt-4">2026 Master Showreel</p>
			</div>

			<div class="relative w-full max-w-5xl aspect-video video-glow rounded-sm overflow-hidden bg-zinc-900">
				<iframe 
					src={`https://www.youtube.com/embed/${showreelId}?autoplay=1&mute=1&loop=1&playlist=${showreelId}&modestbranding=1&rel=0`} 
					class="absolute inset-0 w-full h-full" 
					frameborder="0" 
					allow="autoplay; encrypted-media" 
					allowfullscreen>
				</iframe>
			</div>

			<div class="mt-8 flex gap-10 font-mono text-[9px] text-gray-600 uppercase tracking-widest">
				<div class="flex flex-col"><span class="text-blue-500">RES:</span> 4K UHD</div>
				<div class="flex flex-col"><span class="text-blue-500">FPS:</span> 24/60</div>
				<div class="flex flex-col"><span class="text-blue-500">ENGINE:</span> AE/MAYA/VRAY</div>
			</div>
		</section>

		<section class="max-w-7xl mx-auto py-32 px-6">
			<div class="flex items-end justify-between mb-12 border-b border-zinc-900 pb-6">
				<h2 class="text-4xl font-black italic uppercase">Project_Archive</h2>
				<span class="font-mono text-[10px] text-gray-600 mb-2">Sorted by Category // 001-005</span>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-12 gap-4">
				{categories.map(cat => (
					<a href={`/${cat.slug}`} class={`neo-card ${cat.grid} group relative p-10 min-h-[280px] flex flex-col justify-end`}>
						<div class="absolute top-6 left-6 font-mono text-[9px] text-zinc-800 group-hover:text-blue-600 transition-colors">
							FILE_ID: {
