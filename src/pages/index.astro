---
const title = "Sabari Works";
const showreelId = "x7VlLZrcX7Y";
const resumeLink = "https://drive.google.com/uc?export=download&id=1URSblavJtMmgegujhhuK9LBd_IRoKGk7";

const categories = [
  { name: "Client Works", slug: "client-works", desc: "7 Projects // Social Edits" },
  { name: "Motion Graphics", slug: "motion-graphics", desc: "3 Projects // Dynamic Animation" },
  { name: "VFX", slug: "vfx", desc: "2 Projects // Visual Effects" },
  { name: "Color Correction", slug: "color-correction", desc: "2 Projects // Grading" },
  { name: "3D Modelling", slug: "3d-modelling", desc: "10 Renders // Environments" },
];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title} | Portfolio</title>
		<script src="https://cdn.tailwindcss.com"></script>
		<style>
			/* Fallback core styles */
			body { 
				background-color: #050505; 
				color: white; 
				margin: 0; 
				font-family: 'Segoe UI', Tahoma, sans-serif; 
				overflow-x: hidden;
			}
			
			/* Pure Black & Blue Theme Settings */
			.text-blue { color: #2563eb; }
			.bg-blue { background-color: #2563eb; }
			
			/* Glassmorphism Effect */
			.glass-card {
				background: rgba(255, 255, 255, 0.02);
				backdrop-filter: blur(12px);
				-webkit-backdrop-filter: blur(12px);
				border: 1px solid rgba(255, 255, 255, 0.1);
			}

			.glass-card:hover {
				border-color: #2563eb;
				background: rgba(37, 99, 235, 0.05);
			}
			
			/* Video Background Scaling */
			.hero-video-container {
				position: absolute;
				top: 50%;
				left: 50%;
				width: 100vw;
				height: 56.25vw; /* 16:9 ratio */
				min-height: 100vh;
				min-width: 177.77vh; /* 16:9 ratio */
				transform: translate(-50%, -50%);
				pointer-events: none;
				opacity: 0.35; /* Darkened for readability */
			}
			
			.vignette {
				position: absolute;
				inset: 0;
				background: radial-gradient(circle, transparent 20%, #050505 100%);
				pointer-events: none;
			}
		</style>
	</head>
	<body class="selection:bg-blue-600">
		
		<section class="relative h-screen w-full flex items-center justify-center overflow-hidden">
			<div class="absolute inset-0 z-0 bg-[#050505]">
				<iframe 
					src={`https://www.youtube.com/embed/${showreelId}?autoplay=1&mute=1&loop=1&playlist=${showreelId}&controls=0&rel=0&modestbranding=1`} 
					class="hero-video-container" 
					frameborder="0">
				</iframe>
				<div class="vignette"></div>
			</div>
			
			<div class="relative z-10 text-center px-4">
				<h1 class="text-7xl md:text-[10rem] font-black uppercase italic tracking-tighter leading-none">
					SABARI<br/><span class="text-blue">WORKS</span>
				</h1>
				<p class="font-mono text-blue tracking-[0.6em] uppercase mt-6 md:text-xl font-bold">Editor // VFX // 3D Artist</p>
			</div>
		</section>

		<section class="max-w-7xl mx-auto py-32 px-6">
			<div class="flex items-center gap-4 mb-12">
				<div class="h-[2px] w-12 bg-blue-600"></div>
				<h2 class="text-sm font-mono text-blue-500 uppercase tracking-[0.5em]">Selected Works</h2>
			</div>
			
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				{categories.map(cat => (
					<a href={`/${cat.slug}`} class="glass-card group relative aspect-square rounded-3xl overflow-hidden transition-all duration-500 flex flex-col justify-end p-10">
						<h3 class="text-3xl font-black uppercase italic group-hover:text-blue-500 transition-colors leading-none z-10">{cat.name}</h3>
						<p class="text-xs font-mono text-gray-500 uppercase tracking-widest mt-4 z-10">{cat.desc}</p>
					</a>
				))}
			</div>
		</section>

		<footer id="contact" class="max-w-7xl mx-auto py-32 px-6 border-t border-white/10">
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-20">
				
				<div class="flex flex-col justify-between">
					<div>
						<h2 class="text-6xl font-black uppercase italic tracking-tighter leading-none mb-4">Let's <span class="text-blue">Build</span></h2>
						<p class="font-mono text-gray-500 uppercase text-sm tracking-widest">Available for Freelance & Full-time</p>
					</div>
					
					<div class="mt-12">
						<a href={resumeLink} target="_blank" class="inline-block bg-blue text-white font-black uppercase italic text-2xl py-6 px-12 rounded-full hover:bg-white hover:text-black transition-colors duration-300">
							Download Resume ↓
						</a>
					</div>
				</div>

				<div class="space-y-12">
					<div>
						<span class="text-[10px] font-mono text-blue-500 uppercase tracking-[0.3em]">Direct Email</span>
						<a href="mailto:sabari1132006@gmail.com" class="block text-2xl md:text-4xl font-bold hover:text-blue-500 transition-colors truncate mt-2">sabari1132006@gmail.com</a>
					</div>
					<div>
						<span class="text-[10px] font-mono text-blue-500 uppercase tracking-[0.3em]">Phone / WhatsApp</span>
						<p class="text-2xl md:text-4xl font-bold mt-2">+91 9367778466</p>
					</div>
					<div>
						<span class="text-[10px] font-mono text-blue-500 uppercase tracking-[0.3em]">Professional Network</span>
						<a href="https://www.linkedin.com/in/sabari-jc-357007369" target="_blank" class="block text-2xl md:text-4xl font-bold text-blue hover:text-white transition-colors italic mt-2 underline underline-offset-8">LinkedIn ↗</a>
					</div>
				</div>

			</div>
		</footer>
	</body>
</html>
