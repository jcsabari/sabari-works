  <style>
    :root {
      --bg: #0b0f14;
      --blue: #1e90ff;
      --text: #e6e6e6;
      --border: #1f2a36;
    }

    body {
      margin: 0;
      font-family: system-ui, sans-serif;
      background: var(--bg);
      color: var(--text);
    }

    section {
      padding: 80px 10%;
    }

    h1, h2 {
      margin-bottom: 24px;
      font-weight: 600;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 24px;
    }

    .card {
      border: 1px solid var(--border);
      padding: 30px;
      text-align: center;
      cursor: pointer;
      transition: 0.3s ease;
    }

    .card:hover {
      border-color: var(--blue);
      transform: translateY(-6px);
    }

    iframe {
      width: 100%;
      aspect-ratio: 16 / 9;
      border: none;
    }

    a {
      color: var(--blue);
      text-decoration: none;
    }
  </style>
</head>

