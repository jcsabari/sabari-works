---
// CONFIG
const showreelId = "x7VlLZrcX7Y"; // Replace with your master reel ID
const resumeLink = "https://drive.google.com/uc?export=download&id=1URSblavJtMmgegujhhuK9LBd_IRoKGk7";

const categories = [
  { name: "Client Works", slug: "client-works", desc: "Commercial // Social" },
  { name: "VFX & Motion", slug: "vfx", desc: "Digital Artistry" },
  { name: "3D Modelling", slug: "3d-modelling", desc: "CGI Environments" },
  { name: "Color", slug: "color-correction", desc: "Visual Grading" },
];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Sabari Works | Master Portfolio</title>
		<script src="https://cdn.tailwindcss.com"></script>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;900&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet">
		<style>
			body { 
				background-color: #000; 
				color: #fff; 
				font-family: 'Inter', sans-serif;
				margin: 0;
				overflow-x: hidden;
			}
			.font-mono { font-family: 'Space Mono', monospace; }
			
			/* Blue Glow Effect for the video player */
			.video-frame {
				box-shadow: 0 0 80px rgba(37, 99, 235, 0.15);
				border: 1px solid rgba(255, 255, 255, 0.1);
			}

			.action-box {
				background: #050505;
				border: 1px solid #111;
				transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
			}

			.action-box:hover {
				border-color: #2563eb;
				transform: translateY(-5px);
				background: rgba(37, 99, 235, 0.02);
			}

			.vignette {
				background: radial-gradient(circle, transparent 40%, black 100%);
				pointer-events: none;
			}
		</style>
	</head>
	<body>
		
		<nav class="fixed top-0 w-full z-50 p-8 flex justify-between items-center bg-gradient-to-b from-black/80 to-transparent">
			<h2 class="font-900 italic text-2xl tracking-tighter">SABARI<span class="text-blue-600">.</span></h2>
			<div class="flex gap-6">
				<a href={resumeLink} class="font-mono text-[10px] tracking-widest text-gray-500 hover:text-blue-500 transition-colors">CV_2026</a>
				<a href="mailto:sabari1132006@gmail.com" class="font-mono text-[10px] tracking-widest text-gray-500 hover:text-blue-500 transition-colors">CONTACT</a>
			</div>
		</nav>

		<main class="min-h-screen flex flex-col items-center justify-center px-6 relative">
			
			<div class="text-center mb-12">
				<p class="font-mono text-[10px] text-blue-500 uppercase tracking-[0.8em] mb-4">Master Showreel // 2026</p>
				<h1 class="text-6xl md:text-9xl font-900 italic uppercase tracking-tighter leading-none m-0">
					SABARI <span class="text-blue-600">WORKS</span>
				</h1>
			</div>

			<div class="relative w-full max-w-5xl aspect-video video-frame bg-zinc-900 group">
				<iframe 
					src={`https://www.youtube.com/embed/${showreelId}?autoplay=1&mute=1&loop=1&playlist=${showreelId}&modestbranding=1&rel=0`} 
					class="absolute inset-0 w-full h-full" 
					frameborder="0" 
					allow="autoplay; encrypted-media" 
					allowfullscreen>
				</iframe>
				<div class="vignette absolute inset-0 opacity-40 group-hover:opacity-0 transition-opacity"></div>
			</div>

			<div class="mt-12 w-full max-w-5xl grid grid-cols-1 md:grid-cols-2 gap-4">
				<a href="/client-works" class="action-box p-8 rounded-sm text-center">
					<h3 class="text-xl font-900 italic uppercase tracking-wider">Explore Projects</h3>
					<p class="text-[10px] font-mono text-gray-600 uppercase mt-2">View Commercial & VFX Portfolio</p>
				</a>
				<a href="/3d-modelling" class="action-box p-8 rounded-sm text-center">
					<h3 class="text-xl font-900 italic uppercase tracking-wider text-blue-600">3D Showroom</h3>
					<p class="text-[10px] font-mono text-gray-600 uppercase mt-2">CGI Renders & Environments</p>
				</a>
			</div>

		</main>

		<section class="max-w-7xl mx-auto py-32 px-6">
			<div class="grid grid-cols-1 md:grid-cols-4 gap-4">
				{categories.map(cat => (
					<a href={`/${cat.slug}`} class="action-box p-10 min-h-[200px] flex flex-col justify-center items-center group">
						<h3 class="text-2xl font-900 italic uppercase group-hover:text-blue-600 transition-colors text-center leading-none mb-2">{cat.name}</h3>
						<p class="font-mono text-[9px] text-gray-600 uppercase tracking-widest">{cat.desc}</p>
					</a>
				))}
			</div>
		</section>

		<footer class="py-20 text-center border-t border-zinc-900 mx-6">
			<p class="font-mono text-[10px] text-zinc-700 tracking-[1em] uppercase mb-8">System Finalized // Sabari Works</p>
			<div class="flex justify-center gap-10">
				<a href="https://www.linkedin.com/in/sabari-jc-357007369" class="text-sm font-bold hover:text-blue-500 transition-colors italic uppercase">LinkedIn ↗</a>
				<a href="mailto:sabari1132006@gmail.com" class="text-sm font-bold hover:text-blue-500 transition-colors italic uppercase">Email ↗</a>
			</div>
		</footer>

	</body>
</html>
