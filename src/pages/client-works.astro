---
import BaseLayout from "../layouts/BaseLayout.astro";

const videos = [
  "e50q35cDChw",
  "LLNj1s4T8Dg",
  "qomMmZ8wyOc",
  "DvWhsELYp_4",
  "Z1gQcLdh9iM",
  "1UM5r-VKHV0",
  "f8mYfRMoSB8"
];
---

<BaseLayout title="Client Work">
  <header>
    <h1>Client Work</h1>
    <p>Professional edits created for digital platforms</p>
  </header>

  <section class="grid">
    {videos.map(id => (
      <div class="card" style="padding:0;">
        <iframe
          src={`https://www.youtube.com/embed/${id}`}
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
          style="width:100%; aspect-ratio:9/16; border-radius:8px; border:none;"
        ></iframe>
      </div>
    ))}
  </section>
</BaseLayout>
