---
import Layout from "../layouts/Layout.astro";

const videos = [
  { id: "e50q35cDChw", title: "Client Work 1" },
  { id: "LLNj1s4T8Dg", title: "Client Work 2" },
  { id: "qomMmZ8wyOc", title: "Client Work 3" },
  { id: "DvWhsELYp_4", title: "Client Work 4" },
  { id: "Z1gQcLdh9iM", title: "Client Work 5" },
  { id: "1UM5r-VKHV0", title: "Client Work 6" },
  { id: "f8mYfRMoSB8", title: "Client Work 7" }
];
---

<Layout title="Client Works">

<section class="container">
  <h1 class="title">Client Works</h1>

  <div class="grid">
    {videos.map((video) => (
      <div class="card">
        <iframe
          src={`https://www.youtube.com/embed/${video.id}`}
          title={video.title}
          loading="lazy"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    ))}
  </div>
</section>

<style>
.container{
  max-width:1100px;
  margin:auto;
  padding:40px 20px;
}

.title{
  text-align:center;
  font-size:32px;
  margin-bottom:40px;
}

.grid{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(260px,1fr));
  gap:25px;
}

.card{
  background:#1e293b;
  padding:12px;
  border-radius:12px;
  transition:transform 0.3s ease;
}

.card:hover{
  transform:translateY(-6px);
}

iframe{
  width:100%;
  height:480px;
  border:none;
  border-radius:10px;
}
</style>

</Layout>
