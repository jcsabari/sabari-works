---
import Layout from "../layouts/Layout.astro";

const renders = Array.from({ length: 10 }, (_, i) => `/render${i + 1}.jpg`);
---

<Layout title="3D Modeling">

<section class="container">
  <h1 class="title">3D Modeling</h1>

  <div class="grid">
    {renders.map((img) => (
      <div class="card">
        <a href={img} target="_blank" rel="noopener noreferrer">
          <img src={img} alt="3D Render" />
        </a>
      </div>
    ))}
  </div>
</section>

<style>
.container{
  max-width:1100px;
  margin:auto;
  padding:40px 20px;
}

.title{
  text-align:center;
  font-size:32px;
  margin-bottom:40px;
}

.grid{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(250px,1fr));
  gap:20px;
}

.card{
  overflow:hidden;
  border-radius:12px;
}

.card img{
  width:100%;
  display:block;
  cursor:pointer;
  transition:transform 0.3s ease;
}

.card img:hover{
  transform:scale(1.05);
}
</style>

</Layout>
