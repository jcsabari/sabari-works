---
import Layout from "../layouts/Layout.astro";

const renders = Array.from({ length: 10 }, (_, i) => `/render${i + 1}.jpg`);
---

<Layout title="3D Modeling">

<section class="container">
  <h1 class="title">3D Modeling</h1>

  <div class="grid">
    {renders.map((img) => (
      <div class="card">
        <img src={img} onclick="openImage(this.src)" />
      </div>
    ))}
  </div>
</section>

<div id="viewer" onclick="closeImage()">
  <img id="viewer-img" />
</div>

<style>
.container{
  max-width:1100px;
  margin:auto;
  padding:40px 20px;
}

.title{
  text-align:center;
  font-size:32px;
  margin-bottom:40px;
}

.grid{
  display:grid;
  grid-template-columns:repeat(auto-fit,minmax(250px,1fr));
  gap:20px;
}

.card{
  overflow:hidden;
  border-radius:12px;
}

.card img{
  width:100%;
  cursor:pointer;
  transition:0.3s;
}

.card img:hover{
  transform:scale(1.05);
}

#viewer{
  position:fixed;
  inset:0;
  background:rgba(0,0,0,0.9);
  display:none;
  align-items:center;
  justify-content:center;
  z-index:1000;
}

#viewer img{
  max-width:90%;
  max-height:90%;
  border-radius:10px;
}
</style>

<script>
function openImage(src){
  const viewer = document.getElementById("viewer");
  const img = document.getElementById("viewer-img");

  img.src = src;
  viewer.style.display = "flex";
}

function closeImage(){
  document.getElementById("viewer").style.display = "none";
}
</script>

</Layout>
