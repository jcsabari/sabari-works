---
const { title = "Sabari Works" } = Astro.props;
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>

  <style>
    :root {
      --bg: #0b0f14;
      --panel: #0f141a;
      --blue: #1e90ff;
      --text: #e6e6e6;
      --muted: #9aa4af;
      --border: #1f2a36;
    }

    * { box-sizing: border-box; }

    body {
      margin: 0;
      font-family: system-ui, sans-serif;
      background: var(--bg);
      color: var(--text);
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    header, section {
      padding: 60px 10%;
    }

    h1 {
      margin: 0 0 10px;
      font-weight: 600;
    }

    p {
      max-width: 700px;
      color: var(--muted);
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 24px;
      margin-top: 40px;
    }

    .card {
      background: var(--panel);
      border: 1px solid var(--border);
      border-radius: 8px;
      padding: 24px;
      transition: .3s ease;
    }

    .card:hover {
      transform: translateY(-6px);
      border-color: var(--blue);
    }

    .btn {
      display: inline-block;
      margin-top: 16px;
      color: var(--blue);
    }
  </style>
</head>

<body>
  <slot />
</body>
</html>
